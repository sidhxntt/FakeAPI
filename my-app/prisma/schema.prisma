generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Address {
  id      Int    @id @default(autoincrement())
  userID  Int
  street  String
  suite   String
  city    String
  zipcode String
  User    User?
}

model Album {
  id     Int     @id @default(autoincrement())
  userID Int
  title  String
  User   User    @relation(fields: [userID], references: [id])
  Image  Image[]
}

model Image {
  id           Int    @id @default(autoincrement())
  albumID      Int
  title        String
  url          String
  thumbnailUrl String
  Album        Album  @relation(fields: [albumID], references: [id])
}

model Post {
  id     Int    @id @default(autoincrement())
  userID Int
  title  String
  body   String
  User   User   @relation(fields: [userID], references: [id])
}

model Todos {
  id        Int     @id @default(autoincrement())
  userID    Int
  title     String
  completed Boolean
  User      User    @relation(fields: [userID], references: [id])
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  username  String  @unique
  email     String  @unique
  addressID Int     @unique
  phone     String  @unique
  website   String  @unique
  Album     Album[]
  Post      Post[]
  Todos     Todos[]
  Address   Address @relation(fields: [addressID], references: [id])
}
